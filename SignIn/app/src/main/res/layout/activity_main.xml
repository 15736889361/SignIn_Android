<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <LinearLayout
            android:id="@+id/ll_left_menu"
            android:layout_width="49dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_leftmenu"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Easy Sign"/>
        <LinearLayout
            android:layout_width="49dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_leftmenu"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="40dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:src="@mipmap/icon_bule_point"/>
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-01-12"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:src="@mipmap/icon_bule_point"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-01-12"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray_light"/>
       <RelativeLayout
           android:layout_width="match_parent"
           android:padding="18dp"
           android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="天津市西青区劲舞正"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
           <TextView
               android:id="@+id/tv_tips"
               android:layout_width="wrap_content"
               android:layout_height="40dp"
               android:text="禁止地点微调"
               android:layout_alignParentRight="true"
               android:gravity="center_vertical"/>
           <com.amap.api.maps.MapView
               android:id="@+id/iv_map"
               android:layout_below="@+id/tv_address"
               android:layout_width="match_parent"
               android:layout_height="200dp" />
       </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray_light"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_signin"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="签到"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_signin_selector"
           />

    </RelativeLayout>
</LinearLayout>